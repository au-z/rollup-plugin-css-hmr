{
  "name": "rollup-plugin-css-hmr",
  "version": "0.2.2",
  "main": "./dist/rollup-plugin-css-hmr.es.js",
  "module": "./dist/rollup-plugin-css-hmr.es.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    "import": "./dist/rollup-plugin-css-hmr.es.js",
    "require": "./dist/rollup-plugin-css-hmr.cjs.js"
  },
  "description": "A small CSS helper plugin for Vite/Rollup to trigger hot module reloading of dependent tracked modules.",
  "keywords": [
    "Vite",
    "Rollup",
    "CSS",
    "HMR",
    "Plugin"
  ],
  "files": [
    "dist"
  ],
  "homepage": "https://github.com/auzmartist/rollup-plugin-css-hmr",
  "bugs": {
    "url": "https://github.com/auzmartist/rollup-plugin-css-hmr/issues"
  },
  "repository": "rollup-plugin-css-hmr",
  "license": "CC0-1.0",
  "author": "Austin Martin (https://github.com/auzmartist/rollup-plugin-css-hmr)",
  "scripts": {
    "build": "tsc && vite build",
    "dev": "vite",
    "prepublishOnly": "npm run build",
    "test:esm": "cross-env VITE_PLUGINS_ESM=true vite -c ./test/vite.config.ts",
    "test:cjs": "cross-env VITE_PLUGINS_ESM=false vite -c ./test/vite.config.ts"
  },
  "devDependencies": {
    "@types/node": "^17.0.23",
    "cross-env": "^7.0.3",
    "hybrids": "^7.0.5",
    "typescript": "^4.6.3",
    "vite": "^2.9.1"
  }
}
